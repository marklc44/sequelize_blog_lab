<h2><%= author.dataValues.name %></h2>

<ul class="results">
	<% posts.forEach(function(post) { %>
		<li>
			<h3><a href="/posts/<%= post.dataValues.id %>"><%= post.dataValues.title %></a></h3>
			<div class="buttons pull-right">
				<a class="button" href="/posts/<%= post.dataValues.id %>/edit">Edit</a>
				<form action="/posts/<%= post.dataValues.id %>?_method=delete" method="post">
					<input class="button delete" type="submit" value="X">
				</form>
			</div>
		</li>
	<% }) %>
</ul>
